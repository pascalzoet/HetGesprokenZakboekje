<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:orientation="vertical" android:layout_width="match_parent"
	android:layout_height="match_parent">

	<TextView
		android:id="@+id/activity_creds_uname_hint"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text='Username ("ruud"):' />

	<EditText
		android:id="@+id/activity_creds_username"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:ems="10"
		android:inputType="textPersonName"
		android:text="Username"
		android:visibility="visible"
		tools:visibility="visible" />

	<TextView
		android:id="@+id/activity_creds_pw_hint"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text='Password ("secret"):' />

	<EditText
		android:id="@+id/activity_creds_pw"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:ems="10"
		android:inputType="textPassword"
		android:visibility="visible"
		tools:visibility="visible" />

	<Button
		android:id="@+id/activity_creds_ok"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="OK"
		android:visibility="visible"
		tools:visibility="visible" />
</LinearLayout>