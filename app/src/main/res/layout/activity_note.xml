<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_note_constraint"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

	<EditText
		android:id="@+id/note_tv_title"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="16dp"
		android:enabled="true"
		android:maxLength="40"
		android:paddingLeft="10dp"
		android:paddingTop="10dp"
		android:paddingRight="10dp"
		android:paddingBottom="10dp"
		android:textSize="24sp"
		android:textStyle="bold"
		app:layout_constraintEnd_toStartOf="@id/note_btn_save"
		app:layout_constraintHorizontal_weight="1"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/note_tv_text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:enabled="true"
        android:gravity="top"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/note_tv_title"
        app:layout_constraintVertical_weight="1" />

    <ImageButton
        android:id="@+id/note_btn_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_save"
        app:layout_constraintRight_toLeftOf="@id/note_btn_mic"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/note_btn_mic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/presence_audio_online"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>